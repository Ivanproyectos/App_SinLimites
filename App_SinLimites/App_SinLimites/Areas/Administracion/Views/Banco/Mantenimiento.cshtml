@model App_SinLimites.Areas.Administracion.Models.BancosModelView

<script>
    $(document).ready(function () {
    });

    $('#Banco_Btn_Guardar').click(function () {
        Banco_Ingresar(); 
    }); 

</script>

@using (Html.BeginForm("Banco", "Banco", new { @area = "Administracion" }, FormMethod.Post, new { @id = "frmMantenimiento_Banco", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if(Model.ID_BANCO ==0){
                <h5 class="modal-title"><i class="bi bi-pencil-square"></i>&nbsp; Nueva Banco</h5>
                }else{
                 <h5 class="modal-title"><i class="bi bi-pencil-square"></i>&nbsp; Actualizar Banco</h5>
                }
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.DESC_BANCO)
                        @Html.TextBoxFor(model => model.DESC_BANCO, new { @class = "form-control", @maxlength = "200",@aucomplete="off" })
                        @Html.ValidationMessageFor(model => model.DESC_BANCO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="Banco_Btn_Guardar" class="btn btn-hover-shine btn-square btn-primary"><i class="bi bi-save2"></i>Guardar</button>
                <button type="button" class="btn  btn-square btn-dark" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
}

@Html.Hidden("hfd_ID_BANCO", Model.ID_BANCO)
@Html.Hidden("AccionBanco", Model.Accion)